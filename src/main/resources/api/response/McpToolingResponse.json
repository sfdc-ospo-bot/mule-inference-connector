{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "response": {
      "type": "string",
      "description": "The generated text response from the LLM"
    },
    "tools": {
      "type": "array",
      "description": "Array of tool calls made by the LLM",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the tool call"
          },
          "type": {
            "type": "string",
            "description": "Type of tool call (typically 'function')"
          },
          "function": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the function to call"
              },
              "arguments": {
                "type": "string",
                "description": "JSON string containing function arguments"
              }
            },
            "required": ["name", "arguments"]
          }
        },
        "required": ["id", "type", "function"]
      }
    },
    "toolsExecutionReport": {
      "type": "array",
      "description": "Array of tool execution results from MCP servers",
      "items": {
        "type": "object",
        "properties": {
          "tool": {
            "type": "string",
            "description": "Name of the executed tool"
          },
          "result": {
            "description": "Result returned by the tool execution (can be any type)"
          },
          "serverUrl": {
            "type": "string",
            "description": "URL of the MCP server that executed the tool"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the tool was executed"
          }
        },
        "required": ["tool", "result", "serverUrl", "timestamp"]
      }
    }
  },
  "required": ["response", "tools", "toolsExecutionReport"]
}
